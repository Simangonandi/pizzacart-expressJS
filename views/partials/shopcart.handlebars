<div class="message {{messageHide}}" style="position: fixed; 
    z-index: 1;
    left: 0;
    top: 0;
    text-align: center;
    font-size: 20pt;
    font-weight: bold;
    height: 100%;
    width: 100%;
    vertical-align: 50%;
    padding-top: 20%;
    background-color: {{messageClass}}">
    <form action="/close" method="POST">
        <span class="message">{{messageContent}}</span>
        <br>

        <button class="close" name="close" on type="submit">&times;</button>
    </form>
</div>

<div class="contain cart">
    <h2>Shopping Cart</h2>
    <form action="/cart" method="POST">
        <table class="cartTable">
            <tr>
                <td class="item">
                    <h3 class="item">Small Pizza</h3>
                </td>
                <td><button class="pBtn small" name="size" value="smallAdd" on type="submit">+</button></td>
                <td>
                    <h3 class="smallPizzaQty item">{{qty.smallQty}}</h3>
                </td>
                <td><button class="mBtn small" name="size" value="smallMin" on type="submit">-</button></td>
                <td>
                    <h3 class="item">R<span class="smallPizzaTotal">{{price.smallCost}}</span>
                </td>
            </tr>

            <tr>
                <td class="item">
                    <h3 class="item">Medium Pizza</h3>
                </td>
                <td><button class="pBtn med" name="size" value="medAdd" on type="submit">+</button></td>
                <td>
                    <h3 class="medPizzaQty item">{{qty.medQty}}</h3>
                </td>
                <td><button class="mBtn med" name="size" value="medMin" on type="submit">-</button></td>
                <td>
                    <h3 class="item">R<span class="medPizzaTotal">{{price.medCost}}</span>
                </td>
            </tr>

            <tr>
                <td>
                    <h3 class="item">Large Pizza</h3>
                </td>
                <td><button class="pBtn large" name="size" value="largeAdd" on type="submit">+</button></td>
                <td>
                    <h3 class="largePizzaQty item">{{qty.largeQty}}</h3>
                </td>
                <td><button class="mBtn large" name="size" value="largeMin" on type="submit">-</button></td>
                <td>
                    <h3 class="item">R<span class="largePizzaTotal">{{price.largeCost}}</span>
                </td>
            </tr>

            <tr>
                <td colspan="4">
                    <h3 class="item">Total Cost</h3>
                </td>
                <td>
                    <h3 class="item">R<span class="cartTotal">{{price.totalCart}}</span></h3>
                </td>
            </tr>
    </form>
    <tr>
        <td colspan="5">
            <form action="/checkout" method="POST">
                <button class="checkOut {{checkOut}}" name="checkOut" on type="submit">Check Out</button>
            </form>
        </td>
    </tr>
    </table>

    <div class="payOut {{payOut}}">
        <form action="/pay" method="POST">
            <table class="cartTable">
                <tr>
                    <td>
                        <h3>Payment Amount:</h3>
                    </td>
                    <td class="pAmt">R<input class="payAmt" type="number" name="payAmt" value="{{payAmt}}"></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button class="payBtn" name="payBtn" on type="submit">Pay</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>